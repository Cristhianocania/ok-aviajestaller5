<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detalle"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imCam"
        android:layout_width="match_parent"
        android:layout_height="407dp"
        android:background="#B87070"
        android:contentDescription="@string/todo"
        android:padding="@dimen/cardview_compat_inset_shadow"
        android:scrollbarSize="@android:dimen/app_icon_size"
        app:srcCompat="@drawable/camarita" />

    <TextView
        android:id="@+id/tvCiudad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0B0101"
        android:gravity="bottom"
        android:hint="@string/tvCity"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvdescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#3568"
        android:text="@string/app_name2"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="20sp" />

</FrameLayout>